{
  "name": "xxl",
  "version": "1.0.0",
  "description": "LOC statistics for multiple directories",
  "bin": {
    "xxl": "lib/xxl.js"
  },
  "author": "Guillermo Grau Panea",
  "license": "MIT",
  "keywords": [
    "loc",
    "statistics"
  ],
  "homepage": "https://github.com/guigrpa/xxl#readme",
  "bugs": {
    "url": "https://github.com/guigrpa/xxl/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/guigrpa/xxl.git"
  },
  "scripts": {
    "start": "npm run compile && node lib/xxl",
    "compile": "rm -rf ./lib && babel -d lib src",
    "docs": "extract-docs --template docs/templates/README.md --output README.md",
    "build": "node package && npm run lint && npm run compile && npm run docs && npm run xxl",
    "travis": "npm run compile",
    "lint": "eslint src",
    "xxl": "node lib/xxl"
  },
  "engines": {
    "node": ">=4"
  },
  "dependencies": {
    "chalk": "1.1.3",
    "commander": "2.9.0",
    "diveSync": "0.3.0",
    "sloc": "0.1.10",
    "timm": "^1.2.3"
  },
  "devDependencies": {
    "babel-cli": "^6.6.5",
    "babel-core": "^6.7.2",
    "babel-eslint": "7.0.0",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-react": "^6.5.0",
    "babel-preset-stage-2": "^6.5.0",
    "cross-env": "^1.0.7",
    "eslint": "3.8.1",
    "eslint-config-airbnb": "12.0.0",
    "eslint-plugin-flowtype": "2.20.0",
    "eslint-plugin-import": "1.16.0",
    "eslint-plugin-jsx-a11y": "2.2.3",
    "eslint-plugin-react": "6.4.1",
    "extract-docs": "^1.4.0"
  }
}
